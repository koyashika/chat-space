.MessageBox
  .Message-box__message-info
    .Message-box__message-info__user-name
      = message.user.name
    .Message-box__message-info__post-data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message-box__message
    - if message.content.present?
      %p.Message-box__message__message-contents
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?